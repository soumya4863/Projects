MDScreen:
    name: "attendance"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDLabel:
            text: "Take Attendance"
            pos_hint: {"center_x": 0.6, "center_y": 0.9}
            font_size: "22sp"
            theme_text_color: "Custom"
            text_color: 211,211,211,0.7

        MDFloatLayout:
            size_hint: 0.79, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.72}
            MDLabel:
                text:"Enter Class"
                font_size: "15sp"
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
            TextInput:
                id: class1
                size_hint_y: 0.75
                pos_hint: {"center_x": 0.49, "center_y": 0.3}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                font_size: "17sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": 0.5, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: 120/255, 120/255,120/255, 1

        MDFloatLayout:
            size_hint: 0.79, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            MDLabel:
                text:"Enter Course"
                font_size: "15sp"
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
            TextInput:
                id: Course
                size_hint_y: 0.75
                pos_hint: {"center_x": 0.49, "center_y": 0.3}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                font_size: "17sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": 0.5, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: 120/255, 120/255,120/255, 1

        MDFloatLayout:
            size_hint: 0.79, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            MDLabel:
                text:"Enter Section"
                font_size: "15sp"
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
            TextInput:
                id: grade
                size_hint_y: 0.75
                pos_hint: {"center_x": 0.49, "center_y": 0.3}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                font_size: "17sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": 0.5, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: 120/255, 120/255,120/255, 1
        
        MDRaisedButton:
            text:"Upload Image"
            background_color: 0, 0, 0, 0
            font_size : "18sp"
            size_hint: 0.79, 0.08
            pos_hint: {"center_x": 0.5, "center_y": .28}
            on_press: process_status.text="Processing......."
            on_release:app.upload(process_status)

        MDRaisedButton:
            text:"mail"
            font_size : "18sp"
            background_color: 0, 0, 0, 0
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color
            size_hint: 0.25, 0.07
            pos_hint: {"center_x": 0.75, "center_y": .14}
            on_release:app.mark_absent(class1,Course,grade)

        MDRaisedButton:
            text:"Record"
            background_color: 0, 0, 0, 0
            size_hint: 0.25, 0.07
            theme_text_color: "Custom"
            pos_hint: {"center_x": 0.24, "center_y": .14}
            font_size : "18sp"
            on_press: process_status.text="Processing......."
            on_release:app.record_att(process_status,class1,Course,grade)

        MDLabel:
            id:process_status
            text:""
            font_size: "22sp"
            size_hint:0.5, 0.15 
            pos_hint:{"x": 0.27, "top": 0.3}