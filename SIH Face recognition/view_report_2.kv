#:import Snackbar kivymd.uix.snackbar.Snackbar
#:import Window kivy.core.window.Window

MDScreen:
    name: "view_report_2"

    MDFloatLayout:
        
        size_hint:1,0.065
        pos_hint:{"center_y":0.95}
        MDLabel:
            text:"Student Report"
            font_size:16
            color:"#848181"
            pos_hint:{"center_y":0.4,"center_x":0.6}
    
    ScrollView:
        pos_hint:{"center_y":0.65,"center_x":0.5}
        size_hint:(0.9,0.4)
        do_scroll_x:True
        do_scroll_y:False
        BoxLayout:
            id:box

    ScrollView: 
        pos_hint:{"center_y":0.25} 
        size_hint:(1,0.4)      
        MDList:

            OneLineAvatarIconListItem:
