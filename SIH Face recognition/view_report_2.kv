    Button:
        text: "Back"
        size_hint:None,.075
        font_size: "20sp"
        background_normal:""
        background_color:"#088FF7"
        pos_hint:{"right":0.95,"top":0.97}
        on_release:
            root.manager.transition.direction="right"
