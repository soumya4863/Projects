<IconListItem>
    pos_hint:{"center_x":0.5}
    halign:"center"
    background_normal: ''
    color:"#000000"
    background_color: 1, 1, 1, 1

<MDDropDownMenu>
    ScrollView: 
        pos_hint:{"center_y":0.65,"center_x":0.5}
        size_hint:(0.95,0.4)
        do_scroll_x:True
        do_scroll_y:True   

MDScreen:
    name: "attendance_1"

    MDFloatLayout:
        
        size_hint:1,0.065
        pos_hint:{"center_y":0.95}
        MDLabel:
            text:"View Attendance"
            font_size:25
            color:"#848181"
            pos_hint:{"center_y":0.5}
            halign:"center"


    MDFloatLayout:
        size_hint:.8,.07
        pos_hint:{"center_x":.55,"center_y":.7}
        
        Button:
            id:Class
            text:"Class"
            pos_hint:{"center_x":.45,"center_y":.6}
            background_normal:""
            background_color:1,1,1,0
            foreground_color:rgba(0,0,59,255)
            font_size:"20sp"
            color:"#000000"
            on_release: app.addMonth(Class,app.menu4)
        MDFloatLayout:
            halign:"center"
            pos_hint:{"center_x":.45,"center_y":0}
            size_hint_y:.03
            md_bg_color:rgba(178,178,178,255)

    MDFloatLayout:
        size_hint:.8,.07
        pos_hint:{"center_x":.55,"center_y":.6}
        
        Button:
            id:course
            text:"Course"
            pos_hint:{"center_x":.45,"center_y":.6}
            background_normal:""
            background_color:1,1,1,0
            foreground_color:rgba(0,0,59,255)
            font_size:"20sp"
            color:"#000000"
            on_release: app.addMonth(course,app.menu5)
        MDFloatLayout:
            halign:"center"
            pos_hint:{"center_x":.45,"center_y":0}
            size_hint_y:.03
            md_bg_color:rgba(178,178,178,255)  

    MDRaisedButton:
        id:datePicketBtn
        text: "Select Date"
        font_size: "25sp"
        width:100
        pos_hint: {'center_x': .5, 'center_y': .4}
        on_release: app.show_date_picker()        

    Button:
        text: "Back"
        size_hint:None,.075
        font_size: "20sp"
        background_normal:""
        background_color:"#088FF7"
        pos_hint:{"left":1,"top":0.1,"x":0.1}
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "tDash"
    Button:
        text: "Done"
        size_hint:None,.075
        font_size: "20sp"
        background_normal:""
        background_color:"#088FF7"
        pos_hint:{"right":0.9,"top":0.1}
        on_release:
            app.addDataTable(Class,course,datePicketBtn,root.manager)
